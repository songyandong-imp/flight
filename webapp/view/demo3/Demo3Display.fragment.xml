<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="true" upperCaseAnchorBar="false">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle id="header_1">
                <heading>
                    <m:Title id="title_1" text="display" />
                </heading>

                <snappedTitleOnMobile>
                    <m:Title id="title_2" text="Header Title On Phone" />
                </snappedTitleOnMobile>

                <actions>
                    <ObjectPageHeaderActionButton id="button_1" text="Edit" type="Emphasized"
                        hideText="false" />
                    <ObjectPageHeaderActionButton id="button_2" type="Transparent" text="Delete"
                        hideText="false" hideIcon="true" />
                    <ObjectPageHeaderActionButton id="button_3" type="Transparent" text="Copy"
                        hideText="false" hideIcon="true" />
                    <ObjectPageHeaderActionButton id="button_4" icon="sap-icon://action"
                        type="Transparent" text="Share" tooltip="action" />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <sections>
            <ObjectPageSection id="section_1" titleUppercase="false" title="my section">
                <subSections>
                    <ObjectPageSubSection id="subSection_1" title="Section 1" mode="Expanded"
                        titleUppercase="false">
                        <blocks>

                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection id="section_2" titleUppercase="false" title="my section">
                <subSections>
                    <ObjectPageSubSection id="subSection_2" title="Section 2" mode="Expanded"
                        titleUppercase="false">
                        <blocks>

                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</core:FragmentDefinition>